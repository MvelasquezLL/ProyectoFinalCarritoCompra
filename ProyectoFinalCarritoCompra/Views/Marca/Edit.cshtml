@model ProyectoFinalCarritoCompra.Models.Marca

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        @Html.Partial("_MantenedoresPartial")
        <div class="col my-2">
            <div class="card" style="border-radius: 15px; background-color: #1d0b41; color: aliceblue;">

                <div class="card-body">
                    <h2 class="text-uppercase text-center">Editar Marca</h2>
                    <div class="form-horizontal">
                        <h4>Marca</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.NombreMarca, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NombreMarca, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NombreMarca, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <hr />
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10 my-2 py-2">
                                <input type="submit" value="Guardar" class="btn btn-outline-light btn-lg" />
                                <a href="@Url.Action("Index","Marca")" class="btn btn-outline-light btn-lg float-end" role="button">Volver</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
