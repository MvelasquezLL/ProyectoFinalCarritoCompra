@model IEnumerable<ProyectoFinalCarritoCompra.Models.Producto>

@{
    ViewBag.Title = "Productos";
}
<div id="carouselExampleIndicators" class="carousel slide">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Content/imgs/carrusel/ASUS-ROG-Strix-G15-G512LV-HN090T-cabecera.jpg" class="d-block w-100" width="1248" height="450">
        </div>
        <div class="carousel-item">
            <img src="~/Content/imgs/carrusel/Desktop_Hero_Primus_Mandalorian_Productos_Junio_2023_016239e1.png" class="d-block w-100" width="1248" height="450">
        </div>
        <div class="carousel-item">
            <img src="~/Content/imgs/carrusel/Desktop_Hero_Zelda_(2)_ad22de20.png" class="d-block w-100" width="1248" height="450">
        </div>
        <div class="carousel-item">
            <img src="~/Content/imgs/carrusel/1400x350-banner-xiaomi-libres.jpg" class="d-block w-100" width="1248" height="450">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="album py-5 bg-body-tertiary">
    <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-4 g-3 mt-2">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="~/Content/imgs/prod/@item.Imagen" class="card-img-top" alt="...">

                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <p class="card-text">@item.Descripcion</p>
                        <div class="text-center">
                            <h5 class="card-title">@item.Precio.ToString("C")</h5>
                            <a href="@Url.Action("DetalleProducto", "Producto", new { id = item.Id })" style="width: 80px; " class="btn btn-outline-dark" role="button">Ver</a>
                            @{
                                List<int> list = Session["IdProductos"] as List<int>;
                                bool existe = list.Contains(item.Id);
                            }
                            @if (!existe)
                            {
                                <a class="btn btn-outline-dark mt-auto" href="/Home/AddProducto?id=@item.Id">Añadir al Carrito</a>
                            }
                            else
                            {
                                <a class="btn btn-outline-dark mt-auto" href="/Carrito">Ir al carrito</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div >
    <img class="img-fluid mb-4" src="~/Content/imgs/home/Desktop_redragon.png" style="width:100%"/>
</div>

