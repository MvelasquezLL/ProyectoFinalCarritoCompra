
@{
    ViewBag.Title = "Administración";
}

<body>
    <div class="row">
        @Html.Partial("_MantenedoresPartial")
        <div class="col text-center">
            <div class="row py-lg-5">
                <div class="col-lg-4">
                    <svg class="bd-placeholder-img rounded-circle" width="140" height="140" role="img" aria-label="Placeholder" preserveAspectRatio="xMidYMid slice" focusable="false">
                        <title>Productos</title>
                        <rect width="100%" height="100%" fill="var(--bs-secondary-color)"></rect>
                        <image href="~/Content/imgs/box.jpg" width="140" height="140" />
                    </svg>
                    <h2 class="fw-normal">Productos</h2>
                    <p><a class="btn btn-secondary" href="@Url.Action("Index", "Producto")">Ver detalles »</a></p>
                </div>
                <div class="col-lg-4">
                    <svg class="bd-placeholder-img rounded-circle" width="140" height="140" role="img" aria-label="Placeholder" preserveAspectRatio="xMidYMid slice" focusable="false">
                        <title>Categorías</title>
                        <rect width="100%" height="100%" fill="var(--bs-secondary-color)"></rect>
                        <image href="~/Content/imgs/network.jpg" width="140" height="140" />
                    </svg>
                    <h2 class="fw-normal">Categorías</h2>
                    <p><a class="btn btn-secondary" href="@Url.Action("Index", "Categoria")">Ver detalles »</a></p>
                </div>
                <div class="col-lg-4">
                    <svg class="bd-placeholder-img rounded-circle" width="140" height="140" role="img" aria-label="Placeholder" preserveAspectRatio="xMidYMid slice" focusable="false">
                        <title>Marcas</title>
                        <rect width="100%" height="100%" fill="currentColor"></rect>
                        <image href="~/Content/imgs/tag.jpg" width="140" height="140" />
                    </svg>
                    <h2 class="fw-normal">Marcas</h2>
                    <p><a class="btn btn-secondary" href="@Url.Action("Index", "Marca")">Ver detalles »</a></p>
                </div>
            </div>
        </div>
    </div>

</body>