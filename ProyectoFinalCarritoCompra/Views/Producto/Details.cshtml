@model ProyectoFinalCarritoCompra.Models.Producto

@{
    ViewBag.Title = "Details";
}
<div class="row">
    @Html.Partial("_MantenedoresPartial")
    <div class="col my-2">
        <div class="card" style="border-radius: 15px; background-color: #1d0b41; color: aliceblue;">

            <div class="card-body">
                <div class="card-body">
                    <h2>Detalles del producto</h2>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Categoria.NombreCat)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Categoria.NombreCat)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Marca.NombreMarca)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Marca.NombreMarca)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.CodBarra)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CodBarra)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Stock)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Stock)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Precio)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Precio)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Imagen)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Imagen)
                        </dd>

                    </dl>
                </div>
                <div class="col-md-offset-2 col-md-10 my-2 py-2">
                    <a href="@Url.Action("Edit", "Producto", new { id = Model.Id })" class="btn btn-outline-light btn-lg float-end" role="button">Editar</a>
                    <a href="@Url.Action("Index","Producto")" class="btn btn-outline-light btn-lg" role="button">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>