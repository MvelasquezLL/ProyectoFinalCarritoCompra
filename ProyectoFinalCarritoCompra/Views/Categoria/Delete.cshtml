@model ProyectoFinalCarritoCompra.Models.Categoria

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    @Html.Partial("_MantenedoresPartial")
    <div class="col my-2">
        <div class="card" style="border-radius: 15px; background-color: #1d0b41; color: aliceblue;">

            <div class="card-body">
                <div class="card-body">
                    <h3>¿Seguro que deseas eliminar esta categoria?</h3>
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.NombreCat)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.NombreCat)
                            </dd>

                        </dl>
                    </div>
                </div>
                <hr />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <div class="col-md-offset-2 col-md-10 my-2 py-2">
                            <a href="@Url.Action("Index","Categoria")" class="btn btn-outline-light btn-lg" role="button">Volver</a>
                            <input type="submit" value="Eliminar" class="btn btn-outline-light btn-lg  float-end" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
