@model ProyectoFinalCarritoCompra.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}
<main aria-labelledby="title">

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        <div class="row justify-content-center pt-3">
            <div class="col-lg-8 col-sm-12">
                <div class="card " style="border-radius: 15px; background-color: #1d0b41; color: aliceblue;">
                    <div class="card-body p-5">

                        <h2 class="text-center">Crear una cuenta</h2>
                        @Html.AntiForgeryToken()
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="row justify-content-center">
                            @Html.LabelFor(m => m.Nombre, new { @class = "col-md-8 col-form-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            @Html.LabelFor(m => m.Apellido, new { @class = "col-md-8 col-form-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-8 col-form-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-8 col-form-label" })
                            <div class="col-md-8">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-8 col-form-label" })
                            <div class="col-md-8">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-10">
                                <input type="submit" value="Registrarse" class="btn btn-outline-light float-end" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
