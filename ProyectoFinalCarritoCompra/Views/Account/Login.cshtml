@using ProyectoFinalCarritoCompra.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

<main aria-labelledby="title">
    <div class="row justify-content-center pt-3">
        <div class="col-lg-6 col-sm-12">
            <div class="card " style="border-radius: 15px; background-color: #1d0b41; color: aliceblue;">
                <div class="card-body p-5">

                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()

                            <h2 class="text-center" id="title">@ViewBag.Title.</h2>
                            <h4 class="text-center">Utilice una cuenta local para iniciar sesión.</h4>
                            <hr />

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row justify-content-center">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-8 col-form-label" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-8 col-form-label" })
                                <div class="col-md-8">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row justify-content-center pt-3">
                                <div class="col-2"></div>
                                <div class="col-lg-10 col-md-10 col-sm-12">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-2"></div>
                                <div class="col-lg-10 col-md-10 col-sm-12">
                                    <p>
                                        @Html.ActionLink("Registrarse como usuario nuevo", "Register")
                                        <br />
                                        @Html.ActionLink("¿Ha olvidado su contraseña?", "ForgotPassword")
                                    </p>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-10">
                                    <input type="submit" value="Iniciar sesión" class="btn btn-outline-light float-end" />
                                </div>
                            </div>
                                
                        }
                    </section>

                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}